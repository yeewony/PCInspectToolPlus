<Window x:Class="PCInspectTool_Win10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCInspectTool_Win10"
        mc:Ignorable="d"
        Title="내PC돌보미 점검도구 10" Height="450" Width="800" ResizeMode="NoResize">
    <Grid x:Name="xgrid">
        <Button Content="점검시작버튼" HorizontalAlignment="Left" Margin="32,39,0,0" VerticalAlignment="Top" Width="75" Click="StartInspection"/>
        <Label x:Name="lb_PC01" Content="01 로그인 패스워드 설정" HorizontalAlignment="Left" Margin="60,185,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_02_AccountExpirationDate" Content="02 로그인 패스워드 주기적 변경" HorizontalAlignment="Left" Margin="60,216,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_03_AdministrativeShare" Content="03 공유폴더 제거" HorizontalAlignment="Left" Margin="60,242,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_04_LogonAutorun" Content="04 윈도우 시작 서비스" HorizontalAlignment="Left" Margin="60,268,0,0" VerticalAlignment="Top"/>
        <Label x:Name="_05_WinUpdateStatus" Content="05 최신보안 업데이트" HorizontalAlignment="Left" Margin="60,294,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
